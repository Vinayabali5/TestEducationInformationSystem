/**
 * This directive is used to display syllabus details
 *
 * Applied Styles:
 *
 * @type Directive
 */
(function() {
    'use strict';

    angular
        .module('SyllabusDetailsDirective', [])
        .directive('syllabusDetails', syllabusDetailsDirective);

    function syllabusDetailsDirective() {

        var directive = {
            scope: {
                syllabusList: '=',
            },
            templateUrl: 'js/directives/exams/syllabus-details/syllabus-details.html',
        };

        return directive;
    }
})();
