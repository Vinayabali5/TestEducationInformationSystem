<form id="specialCategoriesEditForm" name="specialCategoriesEditForm" role="form" novalidate show-validation>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="ctrl.cancel()">&times;</button>
        <h4 class="modal-title" id="myToDoLabel">Add/Edit SpecialCategory</h4>
    </div>

    <div class="modal-body">
        <div class="row">
            <div class="form-group" ng-show="true">
                <label for="id" class="control-label col-xs-4">SpecialCategory ID</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input id="id" name="id" type="text" class="form-control" readonly ng-model="ctrl.specialCategories.id">
                </div>
            </div>
            <div class="form-group" ng-show="true">
                <label for="code" class="control-label col-xs-4">Code</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input id="code" name="code" type="text" class="form-control" ng-model="ctrl.specialCategories.code">
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="description" class="control-label col-xs-4">Description:</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input id="description" name="description" type="text" class="form-control text ui-widget-content ui-corner-all" ng-model="ctrl.specialCategories.description"></input>
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="details" class="control-label col-xs-4">Details:</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input id="details" name="details" type="text" class="form-control text ui-widget-content ui-corner-all" ng-model="ctrl.specialCategories.details"></input>
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="priority" class="control-label col-xs-4">Priority:</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input id="priority" name="priority" type="text" class="form-control text ui-widget-content ui-corner-all" ng-model="ctrl.specialCategories.priority"></input>
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="sendEmail" class="control-label col-xs-4">Send Email:</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input id="sendEmail" name="sendEmail" type="checkBox" class="form-control text ui-widget-content ui-corner-all" ng-model="ctrl.specialCategories.sendEmail"></input>
                </div>
            </div>

        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="ctrl.cancel()">
            <span class="glyphicon glyphicon-ban-circle"></span>
            Cancel
        </button>
        <button type="button" class="btn btn-primary" ng-click="ctrl.save()">
            <span class="glyphicon glyphicon-save"></span>
            Save
        </button>
    </div>

</form>