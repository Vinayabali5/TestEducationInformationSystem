<table class="table table-hover" ts-wrapper ts-item-name="Student Duke of Edinburgh">
    <thead>
        <th ts-criteria ng-show="showAll || showStudent">Student</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Hours</th>
        <th>Voluntary Organisation</th>
        <th>Note</th>
        <th ng-show="showActions">Actions</th>
    </thead>
    <tbody>
        <tr ng-repeat="studentDukeOfEdinburgh in ctrl.studentDukeOfEdinburghs" ts-repeat>
            <td ng-show="showAll || showStudent">{{ studentDukeOfEdinburgh.studentId }}</td>
            <td>{{ studentDukeOfEdinburgh.startDate | date:'dd/MM/yyyy' }}</td>
            <td>{{ studentDukeOfEdinburgh.endDate | date:'dd/MM/yyyy' }}</td>
            <td>{{ studentDukeOfEdinburgh.hours }}</td>
            <td>{{ studentDukeOfEdinburgh.voluntaryOrganisation }}</td>
            <td>{{ studentDukeOfEdinburgh.note }}</td>
            <td ng-show="showActions">
                <button type="button" class="btn btrn-sm btn-primary" ng-click="ctrl.editStudentDukeOfEdinburgh(studentDukeOfEdinburgh.id)"><span class="glyphicon glyphicon-pencil"></span> Edit</button>
                <button type="button" class="btn btrn-sm btn-danger" ng-click="ctrl.deleteStudentDukeOfEdinburgh(studentDukeOfEdinburgh.id)"><span class="glyphicon glyphicon-pencil"></span> Delete</button>
            </td>
        </tr>
    </tbody>
</table>
<button ng-show="showActions" type="button" class="btn btn-sm btn-primary" ng-click="ctrl.addStudentDukeOfEdinburgh(ctrl.studentId)"><span class="glyphicon glyphicon-plus"></span> Add</button>