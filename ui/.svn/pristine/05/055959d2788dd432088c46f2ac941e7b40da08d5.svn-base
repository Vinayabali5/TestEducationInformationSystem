<form name="riskLevelsEditForm" role="form" novalidate show-validation>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="ctrl.cancel()">&times;</button>
        <h4 class="modal-title" id="myToDoLabel">Add Risk Level</h4>
    </div>

    <div class="modal-body">
        <div class="row">
            <div class="form-group" ng-show="true">
                <label for="id" class="control-label col-xs-4">Risk Level ID</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="text" id="id" name="id" class="form-control" ng-model="ctrl.riskLevels.id">
                </div>
            </div>
            <div class="form-group" ng-show="true">
                <label for="code" class="control-label col-xs-4">Code</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="text" id="code" name="code" class="form-control" ng-model="ctrl.riskLevels.code">
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="description" class="control-label col-xs-4">Description:</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="text" id="description" name="description" class="form-control text ui-widget-content ui-corner-all" ng-model="ctrl.riskLevels.description"></input>
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="priority" class="control-label col-xs-4">Priority:</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="text" id="priority" name="priority" class="form-control text ui-widget-content ui-corner-all" ng-model="ctrl.riskLevels.priority"></input>
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="sendEmail" class="control-label col-xs-4">Send Email:</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="checkBox" id="sendEmail" name="sendEmail" class="form-control text ui-widget-content ui-corner-all" ng-model="ctrl.riskLevels.sendEmail"></input>
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="sendEmailSafeguarding" class="control-label col-xs-4">Send Email Safeguarding:</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="checkBox" id="sendEmailSafeguarding" name="sendEmailSafeguarding" class="form-control text ui-widget-content ui-corner-all" ng-model="ctrl.riskLevels.sendEmailSafeguarding"></input>
                </div>
            </div>

        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="ctrl.cancel()">
            <span class="glyphicon glyphicon-ban-circle"></span>
            Cancel
        </button>
        <button type="button" class="btn btn-primary" ng-click="ctrl.add()">
            <span class="glyphicon glyphicon-save"></span>
            Save
        </button>
    </div>

</form>