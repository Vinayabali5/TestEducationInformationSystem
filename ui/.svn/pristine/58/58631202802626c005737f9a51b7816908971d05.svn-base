<form name="periodsEditForm" role="form" novalidate show-validation>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="ctrl.cancel()">&times;</button>
        <h4 class="modal-title">Add/Edit Period</h4>
    </div>

    <div class="modal-body">
        <div class="row">
            <div class="form-group" ng-show="true">
                <label for="code" class="control-label col-xs-4">Code</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="text" class="form-control" id="code" name="id" ng-model="ctrl.periods.code">
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="description" class="control-label col-xs-4">Description</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="text" class="form-control text ui-widget-content ui-corner-all" id="description" name="description" ng-model="ctrl.periods.description"></input>
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="description" class="control-label col-xs-4">Block</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <block-selection class="form-control text ui-widget-content ui-corner-all" id="description" name="description" ng-model="ctrl.periods.blockId" readonly="setReadonly"></block-selection>
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="startTime" class="control-label col-xs-4">Start Time</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <div uib-timepicker id="startTime" name="startTime" ng-model="ctrl.periods.startTime"></div>
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="endTime" class="control-label col-xs-4">End Time</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <div uib-timepicker id="endTime" name="endTime" ng-model="ctrl.periods.endTime"> </div>

                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="day" class="control-label col-xs-4">Day</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="text" id="day" name="day" class="form-control text ui-widget-content ui-corner-all" ng-model="ctrl.periods.day"></input>
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="dayPeriod" class="control-label col-xs-4">Day Period</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="text" id="dayPeriod" name="dayPeriod" class="form-control text ui-widget-content ui-corner-all" ng-model="ctrl.periods.dayPeriod"></input>
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="boxNo" class="control-label col-xs-4">Box Number</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="text" id="boxNo" name="boxNo" class="form-control text ui-widget-content ui-corner-all" ng-model="ctrl.periods.boxNo"></input>
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="cristalPeriod" class="control-label col-xs-4">Cristal Period</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="text" id="cristalPeriod" name="cristalPeriod" class="form-control text ui-widget-content ui-corner-all" ng-model="ctrl.periods.cristalPeriod"></input>
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="defaultPeriodText" class="control-label col-xs-4">Default Period Text</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="text" id="defaultPeriodText" name="defaultPeriodText" class="form-control text ui-widget-content ui-corner-all" ng-model="ctrl.periods.defaultPeriodText"></input>
                </div>
            </div>

        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="ctrl.cancel()">
            <span class="glyphicon glyphicon-ban-circle "></span>
            Cancel
        </button>
        <button type="button " class="btn btn-primary" ng-click="ctrl.save()">
            <span class="glyphicon glyphicon-save"></span>
            Save
        </button>
    </div>

</form>