<form name="editStudentAdmission" class="form">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="ctrl.cancel()">&times;</button>
        <h4 class="modal-title" id="myToDoLabel">Edit Student Admission</h4>
    </div>

    <div class="modal-body">
        <div class="row">
            <div class="col-sm-6">
                <div class="row">
                    <h4 class="modal-header">Previous School Information</h4>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="refRequested" class="control-label col-xs-4">Reference Requested</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <div class="input-group">
                                <input type="text" class="form-control" id="refRequested" name="refRequested" uib-datepicker-popup="dd/MM/yyyy" is-open="refRequested" ng-model="ctrl.studentAdmission.refRequested">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" ng-click="refRequested = !refRequested"><span class="glyphicon glyphicon-calendar"></span></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="refReceived" class="control-label col-xs-4">Reference Received</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <div class="input-group">
                                <input id="refReceived" type="text" class="form-control" is-open="refReceived" uib-datepicker-popup="dd/MM/yyyy" name="refReceived" ng-model="ctrl.studentAdmission.refReceived">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" ng-click="refReceived = !refReceived"><span class="glyphicon glyphicon-calendar"></span></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="schoolReportRequested" class="control-label col-xs-4">Report Requested:</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <div class="input-group">
                                <input id="schoolReportRequested" type="text" class="form-control" is-open="schoolReportRequested" uib-datepicker-popup="dd/MM/yyyy" name="schoolReportRequested" ng-model="ctrl.studentAdmission.schoolReportRequested">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" ng-click="schoolReportRequested = !schoolReportRequested"><span class="glyphicon glyphicon-calendar"></span></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="schoolReportReceived" class="control-label col-xs-4">Report Received:</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <div class="input-group">
                                <input id="schoolReportReceived" type="text" class="form-control" is-open="schoolReportReceived" uib-datepicker-popup="dd/MM/yyyy" name="schoolReportReceived" ng-model="ctrl.studentAdmission.schoolReportReceived">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" ng-click="schoolReportReceived = !schoolReportReceived"><span class="glyphicon glyphicon-calendar"></span></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="blueCard" class="control-label col-xs-4">Blue Card Date:</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <div class="input-group">
                                <input id="blueCard" type="text" class="form-control" is-open="blueCard" uib-datepicker-popup="dd/MM/yyyy" name="blueCard" ng-model="ctrl.studentAdmission.blueCard">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" ng-click="blueCard = !blueCard"><span class="glyphicon glyphicon-calendar"></span></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group" ng-show="true">
                        <label for="schoolReportStatusId" class="control-label col-xs-4">Report Status</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <school-report-status-selection id="schoolReportStatusId" name="schoolReportStatusId" class="form-control" alt-null-text="'-- Select Report Status --'" readonly="setReadonly" ng-model="ctrl.studentAdmission.schoolReportStatusId"></school-report-status-selection>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group" ng-show="true">
                        <label for="statusId" class="control-label col-xs-4">Application Status</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <application-status-selection id="statusId" name="statusId" class="form-control" ng-model="ctrl.studentAdmission.statusId"></application-status-selection>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group" ng-show="true">
                        <label for="offerTypeId" class="control-label col-xs-4">Offer Type</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <offer-type-selection id="offerTypeId" name="offerTypeId" class="form-control" alt-null-text="'-- Select Offer Type --'" ng-model="ctrl.studentAdmission.offerTypeId"></offer-type-selection>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-sm-6">
                <div class="row">
                    <div class="form-group" class="control-label col-xs-4">
                        <label for="acceptanceReceived" class="control-label col-xs-4">Acceptance Received:</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <div class="input-group">
                                <input id="acceptanceReceived" name="acceptanceReceived" type="text" class="form-control" is-open="acceptanceReceived" uib-datepicker-popup="dd/MM/yyyy" ng-model="ctrl.studentAdmission.acceptanceReceived">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" ng-click="acceptanceReceived=! acceptanceReceived"><span class="glyphicon glyphicon-calendar"></span></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group" ng-show="true">
                        <label for="ethnicityId" class="control-label col-xs-4">Ethnicity:</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <ethnicity-selection id="ethnicityId" name="ethnicityId" class="form-control" readonly="setReadonly" ng-model="ctrl.studentAdmission.ethnicityId"></ethnicity-selection>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group" ng-show="true">
                        <label for="freeMealsWhileAtSchool" class="control-label col-xs-4">Free Meals While At School</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <input id="freeMealsWhileAtSchool" name="freeMealsWhileAtSchool" type="checkbox" class="form-control" ng-model="ctrl.studentAdmission.freeMealsWhileAtSchool">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group" ng-show="true">
                        <label for="parentsUniversityEducated" class="control-label col-xs-4">parentsUniversityEducated</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <input id="parentsUniversityEducated" name="parentsUniversityEducated" type="checkbox" class="form-control" ng-model="ctrl.studentAdmission.parentsUniversityEducated">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label for="admissionNotes" class="control-label col-xs-4">Admission Notes:</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <textarea type="text" id="admissionsNotes" name="admissionNotes" ng-model="ctrl.studentAdmission.admissionsNotes" class="form-control text ui-widget-content ui-corner-all" rows="2" cols="30"></textarea>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <h4 class="modal-header"> Interviewer Details: </h4>
                </div>

                <!--                 <div class="row"> -->
                <!--                     <div class="form-group" class="control-label col-xs-4"> -->
                <!--                         <label for="interviewDate" class="control-label col-xs-4">Interview Date:</label> -->
                <!--                         <div class="col-xs-8 col-sm-8 col-md-8"> -->
                <!--                             <input class="form-control" type="text" id="interviewDate" name="interviewDate" placeholder="DD/MM/YYYY HH:MM" ng-model="ctrl.studentAdmission.interviewDate" ng-pattern="/^([1-9]|([012][0-9])|(3[01]))\/([0]{0,1}[1-9]|1[012])\/\d\d\d\d\s([0-1]?[0-9]|2?[0-3]):([0-5]\d)$/g"></input> -->
                <!--                             <span class="validation-error" ng-show="editStudentAdmission.interviewDate.$dirty && editStudentAdmission.interviewDate.$invalid">Please enter the Date and Time in DD/MM/YYYY HH:MM Format</span> -->
                <!--                         </div> -->
                <!--                     </div> -->
                <!--                 </div> -->

                <div class="row">
                    <div class="form-group" class="control-label col-xs-4">
                        <label for="interviewDate" class="control-label col-xs-4">Interview Date:</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <div class="input-group">
                                <input id="interviewDate" name="interviewDate" type="text" class="form-control" is-open="interviewDate" uib-datepicker-popup="dd/MM/yyyy" ng-model="ctrl.studentAdmission.interviewDate">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" ng-click="interviewDate=! interviewDate"><span class="glyphicon glyphicon-calendar"></span></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="interviewDate" class="control-label col-xs-4">Interview Time</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <div uib-timepicker id="interviewDate" name="interviewDate" ng-model="ctrl.studentAdmission.interviewDate"></div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group" ng-show="true">
                        <label for="interviewerId" class="control-label col-xs-4">Interviewer</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <staff-selection id="interviewerId" name="interviewerId" readonly="setReadonly" class="form-control" include-blank="true" ng-model="ctrl.studentAdmission.interviewerId"></staff-selection>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group" ng-show="true">
                        <label for="possibleAspire" class="control-label col-xs-4">Possible Aspire</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <input id="possibleAspire" name="possibleAspire" type="checkbox" class="form-control" ng-model="ctrl.studentAdmission.possibleAspire">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group" ng-show="true">
                        <label for="schoolReportNotSeen" class="control-label col-xs-4">School Report Not Seen</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <input id="schoolReportNotSeen" name="schoolReportNotSeen" type="checkbox" class="form-control" ng-model="ctrl.studentAdmission.schoolReportNotSeen">
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="row">
            <h4 class="modal-header">College Fund Entry: </h4>
        </div>
        <div class="row">
            <div class="form-group" ng-show="true">
                <label for="collegeFundPaidId" class="control-label col-xs-4">College Fund Paid:</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <college-fund-paid-selection id="collegeFundPaidId" name="collegeFundPaidId" readonly="setReadonly" class="form-control" include-blank="true" ng-model="ctrl.studentAdmission.collegeFundPaidId"></college-fund-paid-selection>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group" ng-show="true">
                <label for="collegeFundPaidYears" class="control-label col-xs-4">Years Paid For:</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input id="collegeFundPaidYears" name="collegeFundPaidYears" class="form-control" ng-model="ctrl.studentAdmission.collegeFundPaidYears">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="row">
                    <h4 class="modal-header">Intro and Enrolment Info</h4>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="cannotAttendIntroDay" class="control-label col-xs-10">Cannot Attend Introduction Day:</label>
                        <div class="col-xs-2">
                            <input type="checkbox" class="form-control" id="cannotAttendIntroDay" name="cannotAttendIntroDay" ng-model="ctrl.studentAdmission.cannotAttendIntroDay">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="cannotAttendInductionDay" class="control-label col-xs-10">Cannot Attend Induction Day:</label>
                        <div class="col-xs-2">
                            <input type="checkbox" class="form-control" id="cannotAttendInductionDay" name="cannotAttendInductionDay" ng-model="ctrl.studentAdmission.cannotAttendInductionDay">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="learningSupportOnIntro" class="control-label col-xs-10">Additional Learning Support On Intro Day:</label>
                        <div class="col-xs-2">
                            <input type="checkbox" class="form-control" id="learningSupportOnIntro" name="learningSupportOnIntro" ng-model="ctrl.studentAdmission.learningSupportOnIntro">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="inductionDate" class="control-label col-xs-4">Date of Induction:</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <div class="input-group">
                                <input id="inductionDate" name="inductionDate" type="text" class="form-control" is-open="inductionDate" uib-datepicker-popup="dd/MM/yyyy" ng-model="ctrl.studentAdmission.inductionDate">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" ng-click="inductionDate=! inductionDate"><span class="glyphicon glyphicon-calendar"></span></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!--                 <div class="row"> -->
                <!--                     <div class="form-group"> -->
                <!--                         <label for="enrolmentInterviewDate" class="control-label col-xs-4">Enrolment Interview Date:</label> -->
                <!--                         <div class="col-xs-8 col-sm-8 col-md-8"> -->
                <!--                             <input type="text" class="form-control" id="enrolmentInterviewDate" name="enrolmentInterviewDate" placeholder="DD/MM/YYYY HH:MM" ng-model="ctrl.studentAdmission.enrolmentInterviewDate" ng-pattern="/^([1-9]|([012][0-9])|(3[01]))\/([0]{0,1}[1-9]|1[012])\/\d\d\d\d\s([0-1]?[0-9]|2?[0-3]):([0-5]\d)$/g"></input> -->
                <!--                             <span class="validation-error" ng-show="editStudentAdmission.enrolmentInterviewDate.$dirty && editStudentAdmission.enrolmentInterviewDate.$invalid">Please enter the Date and Time in DD/MM/YYYY HH:MM Format</span> -->
                <!--                         </div> -->
                <!--                     </div> -->
                <!--                 </div> -->

                <div class="row">
                    <div class="form-group">
                        <label for="enrolmentInterviewDate" class="control-label col-xs-4">Enrolment Interview Date:</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <div class="input-group">
                                <input id="enrolmentInterviewDate" type="text" class="form-control" is-open="enrolmentInterviewDate" uib-datepicker-popup="dd/MM/yyyy" name="enrolmentInterviewDate" ng-model="ctrl.studentAdmission.enrolmentInterviewDate">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" ng-click="enrolmentInterviewDate=! enrolmentInterviewDate"><span class="glyphicon glyphicon-calendar"></span></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="enrolmentInterviewDate" class="control-label col-xs-4">Enrolment Interview Time:</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <div uib-timepicker id="enrolmentInterviewDate" name="enrolmentInterviewDate" ng-model="ctrl.studentAdmission.enrolmentInterviewDate"></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group" ng-show="true">
                        <label for="interviewBy" class="control-label col-xs-4">To Be Interviewed by at Enrolment:</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <input id="interviewBy" type="text" name="interviewBy" class="form-control" ng-model="ctrl.studentAdmission.interviewBy">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="row">
                    <h4 class="modal-header">Data Sharing Options: </h4>
                </div>

                <div class="row">

                    <div class="form-group" ng-show="true">
                        <label for="restrictedUseIndicatorId" class="control-label col-xs-4">Restricted Use:</label>
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <restricted-use-indicator-selection id="restrictedUseIndicatorId" name="restrictedUseIndicatorId" class="form-control" readonly="setReadonly" alt-null-text="'-- Select Restricted Use --'" ng-model="ctrl.studentAdmission.restrictedUseIndicatorId"></restricted-use-indicator-selection>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="contactByPost" class="control-label col-xs-10">Contact By Post:</label>
                        <div class="col-xs-2">
                            <input type="checkbox" class="form-control" id="contactByPost" name="cannotAttendInductionDay" ng-model="ctrl.studentAdmission.contactByPost">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="contactByPhone" class="control-label col-xs-10">Contact By Phone:</label>
                        <div class="col-xs-2">
                            <input type="checkbox" class="form-control" id="contactByPhone" name="cannotAttendInductionDay" ng-model="ctrl.studentAdmission.contactByPhone">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="contactByEmail" class="control-label col-xs-10">Contact By Email:</label>
                        <div class="col-xs-2">
                            <input type="checkbox" class="form-control" id="contactByEmail" name="cannotAttendInductionDay" ng-model="ctrl.studentAdmission.contactByEmail">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="cannotAttendInductionDay" class="control-label col-xs-10">LRS Opt Out:</label>
                        <div class="col-xs-2">
                            <input type="checkbox" class="form-control" id="cannotAttendInductionDay" name="cannotAttendInductionDay" ng-model="ctrl.studentAdmission.lrsOptOut">
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <h4 class="modal-header">Safeguarding Details: </h4>


            <div class="form-group">
                <label for="ehcp" class="control-label col-xs-10">Education, Health and Care Plan:</label>
                <div class="col-xs-2">
                    <input type="checkbox" class="form-control" id="ehcp" name="ehcp" ng-model="ctrl.studentAdmission.ehcp">
                </div>
            </div>

            <div class="form-group">
                <label for="lookedAfterChildOrAdopted" class="control-label col-xs-10">Are you a looked after child or adopted?</label>
                <div class="col-xs-2">
                    <input type="checkbox" class="form-control" id="lookedAfterChildOrAdopted" name="lookedAfterChildOrAdopted" ng-model="ctrl.studentAdmission.lookedAfterChildOrAdopted">
                </div>
            </div>

            <div class="form-group">
                <label for="childrenServicesInvolvedAtSchool" class="control-label col-xs-10">Have you or your family had any involvement with Children's Services during school years?</label>
                <div class="col-xs-2">
                    <input type="checkbox" class="form-control" id="childrenServicesInvolvedAtSchool" name="childrenServicesInvolvedAtSchool" ng-model="ctrl.studentAdmission.childrenServicesInvolvedAtSchool">
                </div>
            </div>

            <div class="form-group">
                <label for="otherSocialSupportIssues" class="control-label col-xs-10">Are there any other social issues which may require further support while at college?</label>
                <div class="col-xs-2">
                    <input type="checkbox" class="form-control" id="otherSocialSupportIssues" name="otherSocialSupportIssues" ng-model="ctrl.studentAdmission.otherSocialSupportIssues">
                </div>
            </div>

        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="ctrl.cancel()"><span class="glyphicon glyphicon-ban-circle"></span> Cancel</button>
        <button type="button" class="btn btn-primary" ng-click="ctrl.save()"><span class="glyphicon glyphicon-save"></span> Save</button>
    </div>
</form>