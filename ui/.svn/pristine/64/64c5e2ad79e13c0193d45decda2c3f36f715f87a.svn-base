<form id="centralMonitoringsEditForm" name="centralMonitoringsEditForm" role="form" novalidate show-validation>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="ctrl.cancel()">&times;</button>
        <h4 class="modal-title" id="myToDoLabel">Edit Central Monitoring</h4>
    </div>

    <div class="modal-body">
        <div class="row">

            <div class="form-group" ng-show="true">
                <label for="id" class="control-label col-xs-4">Central Monitoring ID</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="text" class="form-control" id="id" name="id" readonly ng-model="ctrl.centralMonitorings.id">
                </div>
            </div>
            <div class="form-group" ng-show="true">
                <label for="code" class="control-label col-xs-4">Code</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="text" class="form-control" id="code" name="code" ng-model="ctrl.centralMonitorings.code">
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="description" class="control-label col-xs-4">Description:</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="text" class="form-control text ui-widget-content ui-corner-all" id="description" name="description" ng-model="ctrl.centralMonitorings.description"></input>
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="warningColour" class="control-label col-xs-4">Warning Colour:</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="text" class="form-control text ui-widget-content ui-corner-all" id="warningColour" name="warningColour" ng-model="ctrl.centralMonitorings.warningColour"></input>
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="nonEntry" class="control-label col-xs-4">Non Entry:</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input id="nonEntry" type="checkbox" class="form-control text ui-widget-content ui-corner-all" id="nonEntry" name="nonEntry" ng-model="ctrl.centralMonitorings.nonEntry"></input>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="ctrl.cancel()">
            <span class="glyphicon glyphicon-ban-circle"></span>
            Cancel
        </button>
        <button type="button" class="btn btn-primary" ng-click="ctrl.save()">
            <span class="glyphicon glyphicon-save"></span>
            Save
        </button>
    </div>

</form>