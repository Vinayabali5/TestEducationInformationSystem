<table class="table table-hover" ts-wrapper ts-item-name="Student Careers record">
    <thead>
        <th ts-criteria ng-show="showAll || showStudent">Student</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Organiser</th>
        <th>Career Record Type</th>
        <th>Employer/Institution</th>
        <th>Note</th>
        <th ng-show="showActions">Actions</th>
    </thead>
    <tbody>
        <tr ng-repeat="studentCareersRecord in ctrl.studentCareersRecords" ts-repeat>
            <td ng-show="showAll || showStudent">{{ studentCareersRecord.studentId }}</td>
            <td>{{ studentCareersRecord.startDate | date:'dd/MM/yyyy' }}</td>
            <td>{{ studentCareersRecord.endDate | date:'dd/MM/yyyy' }}</td>
            <td>{{ studentCareersRecord.organiser }}</td>
            <td>{{ studentCareersRecord._careersRecordTypeDescription }}</td>
            <td>{{ studentCareersRecord.employerInstitution }}</td>
            <td>{{ studentCareersRecord.note }}</td>
            <td ng-show="showActions">
                <button type="button" class="btn btrn-sm btn-primary" ng-click="ctrl.editStudentCareersRecord(studentCareersRecord.id)"><span class="glyphicon glyphicon-pencil"></span> Edit</button>
                <button type="button" class="btn btrn-sm btn-danger" ng-click="ctrl.deleteStudentCareersRecord(studentCareersRecord.id)"><span class="glyphicon glyphicon-pencil"></span> Delete</button>
            </td>
        </tr>
    </tbody>
</table>
<button ng-show="showActions" type="button" class="btn btn-sm btn-primary" ng-click="ctrl.addStudentCareersRecord(ctrl.studentId)"><span class="glyphicon glyphicon-plus"></span> Add</button>