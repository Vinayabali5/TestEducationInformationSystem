<form name="personNotesEditForm" role="form" novalidate show-validation>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="ctrl.cancel()">&times;</button>
        <h4 class="modal-title">Add/Edit Person Note</h4>
    </div>

    <div class="modal-body">
        <div class="row">
            <div class="form-group" ng-show="false">
                <label for="id" class="control-label col-xs-4">Note ID</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="text" class="form-control" id="id" name="id" readonly ng-model="ctrl.note.id">
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="personId" class="control-label col-xs-4">Person Note ID</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="text" class="form-control" id="personId" name="personId" readonly ng-model="ctrl.note.personId">
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="typeId" class="control-label col-xs-4">Note Type</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <note-type-selection class="form-control text ui-widget-content ui-corner-all" id="typeId" name="typeId" ng-model="ctrl.note.typeId" ng-required="true"></note-type-selection>
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="note" class="control-label col-xs-4">Note</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <textarea type="text" class="form-control text ui-widget-content ui-corner-all" id="note" name="note" ng-model="ctrl.note.note" ng-required="true"></textarea>
                    <span class="validation-error" ng-show="personNotesEditForm.note.$dirty && personNotesEditForm.note.$error.required">Mandatory Field</span>
                </div>
            </div>

            <div class="form-group" ng-show="true">
                <label for="pastoral" class="control-label col-xs-4">Pastoral</label>
                <div class="col-xs-8 col-sm-8 col-md-8">
                    <input type="checkbox" class="form-control" id="pastoral" name="pastoral" ng-model="ctrl.note.pastoral">
                </div>
            </div>

        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="ctrl.cancel()">
            <span class="glyphicon glyphicon-ban-circle"></span>
            Cancel
        </button>
        <button type="button" class="btn btn-primary" ng-click="ctrl.save()" ng-disabled="personNotesEditForm.$invalid">
            <span class="glyphicon glyphicon-save"></span>
            Save
        </button>
    </div>

</form>